<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MecFoundation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/interface_pink</item>
        <item name="colorPrimaryVariant">@color/interface_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MecFoundation.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="TextInputLayout.Primary3.15.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="boxStrokeColor">@color/interface_dark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/Appearance</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextAppearance">@style/TextAppearance.Roboto.Light.Caption</item>
        <item name="helperTextTextAppearance">@style/HintTextAppearance.Normal.Regular.11</item>
    </style>

    <style name="TextAppearance.Roboto.Light.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Appearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="HintTextAppearance.Normal.Regular.11" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.App.Cursor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/interface_sky_blue</item>
    </style>


    <style name="TextAppearance.App.EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/interface_navy_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="TextView.Style8" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/BlueTextAppearance.Normal.Regular.13</item>
        <item name="android:gravity">right</item>
    </style>


    <style name="BlueTextAppearance.Normal.Regular.13" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/interface_midnight_blue</item>
    </style>

    <style name="TextView.Style5" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:backgroundTint">@color/TRANSPARENT</item>
    </style>

    <style name="TextView.Style12" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:backgroundTint">@color/interface_pink</item>
    </style>


    <style name="TextView.Style6" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/HintTextAppearance.Normal.Regular.13</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="HintTextAppearance.Normal.Regular.13" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="TextView.Style7" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/BlueTextAppearance.Normal.Regular.13</item>
        <item name="android:gravity">center</item>
    </style>










</resources>